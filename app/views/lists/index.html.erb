<h1>Listing lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Due date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.due_date %></td>
        <td><%= list.done %></td>
        <td><%= link_to 'Show', list, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-info"%></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: "btn btn-warning"%>
